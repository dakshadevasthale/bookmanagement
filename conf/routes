# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.userLogin

GET     /register                           controllers.HomeController.register

POST    /login                          controllers.HomeController.login(request : Request)

POST   /createUser                  controllers.HomeController.createUser(request : Request)

GET   /forgotpassword               controllers.HomeController.forgotPassword

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


